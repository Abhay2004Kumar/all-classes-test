{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/quiz/select",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/quiz/:exam/:subject/:topic",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    }
  ]
}
